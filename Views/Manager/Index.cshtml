@model List<Employee>

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">All Employee</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Manager" asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>  Add New Employee
                </a>
            </div>
        </div>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Employee Email
                    </th>
                    <th>
                        Password
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u=>u.Name))
                {
                    <tr>
                        <td>
                            @obj.Name
                        </td>
                        <td>
                            @obj.Email
                        </td>
                        <td>
                            @obj.Password
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Manager" asp-action="Edit" asp-route-id="@obj.IdEmployee" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Manager" asp-action="Delete" asp-route-id="@obj.IdEmployee" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i> Delete
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

